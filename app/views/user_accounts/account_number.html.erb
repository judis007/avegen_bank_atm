<h1 class = 'd-flex justify-content-center fixed-top'>Avegen ATM</h1>

<%= form_with url: pin_path do |form| %>
    <div class = 'd-flex justify-content-center vertical-center'>
        <div class="row g-3">
            <div class="col-auto">
                <%= form.number_field :account_number, class: 'form-control-lg', placeholder: 'Account Number', required: true %>
            </div>

            <div class="col-auto">
                <%= form.submit "Search your account", class: 'btn-lg btn-warning' %>
            </div>
        </div>
    </div>
<% end %>
  